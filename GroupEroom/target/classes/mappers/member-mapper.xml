<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="memberMapper">
	<resultMap type="Member" id="memberResultMap">
		<id property="memberId" column="MEMBER_ID"></id>
		<result property="memberDept" column="MEMBER_DEPT"></result>
		<result property="memberJob" column="MEMBER_JOB"></result>
		<result property="memberName" column="MEMBER_NAME"></result>
		<result property="memberPwd" column="MEMBER_PWD"></result>
		<result property="memberRrn" column="MEMBER_RRN"></result>
		<result property="memberPhone" column="MEMBER_PHONE"></result>
		<result property="memberEmail" column="MEMBER_EMAIL"></result>
		<result property="memberAddr" column="MEMBER_ADDR"></result>
		<result property="bank" column="BANK"></result>
		<result property="Account" column="ACCOUNT"></result>
		<result property="regDate" column="REG_DATE"></result>
		<result property="quitYn" column="QUIT_YN"></result>
		<result property="quitDate" column="QUIT_DATE"></result>
	</resultMap>

	
	<select id="loginMember"  resultMap="memberResultMap">
	 SELECT *FROM MEMBER 
	 WHERE MEMBER_ID = #{memberId } AND MEMBER_PWD = #{memberPwd } 
	</select>
	
	<select id="memberList" resultMap="memberResultMap">
		SELECT * FROM MEMBER
		
	</select>
	

	<insert id="insertMember" parameterType="com.eroom.gw.member.domain.Member">
		INSERT INTO MEMBER(MEMBER_ID,MEMBER_DEPT, MEMBER_JOB, MEMBER_NAME, MEMBER_RRN, MEMBER_PHONE,MEMBER_ADDR) VALUES(ID_SEQ.NEXTVAL, #{memberDept }, #{memberJob }, #{memberName },#{memberRrn }, #{memberPhone },#{memberAddr })

</insert>

	<select id="selectDepMemberList" resultMap="memberResultMap">
		SELECT * FROM MEMBER
		WHERE MEMBER_DEPT = #{depName }
	</select>
	
	
	
	
</mapper>